{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "Get-ChildItem",
      "args": [
        "-Path",
        "build",
        "-Exclude",
        ".gitignore",
        "|",
        "Remove-Item",
        "-Recurse",
        "-Force",
        "-ErrorAction",
        "SilentlyContinue"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "clear": true
      },
      "problemMatcher": []
    },
	{
    "label": "build",
    "type": "shell",
    "command": "arduino-cli",
    "args": [
        "compile",
        "--fqbn", "arduino:avr:mega",
        "--build-path", "./build",
        "--library", "./grbl",
        "."  
    ],
    "group": {"kind": "build", "isDefault": true},
    "presentation": {"echo": true, "reveal": "always", "clear": true}
	},
    {
      "label": "flash",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "upload",
        "-p",
        "COM3",
        "--fqbn",
        "arduino:avr:mega",
        "--input-dir",
        "./build",
        "./"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "build and flash",
      "dependsOrder": "sequence",
      "dependsOn": [
        "arduino: build",
        "arduino: flash"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "debug - serial monitor",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "monitor",
        "-p",
        "COM3",
        "-c",
        "baudrate=115200"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "clear": true
      }
    }
  ]
}